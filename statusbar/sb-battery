#!/bin/sh

for battery in /sys/class/power_supply/BAT?*; do
	[ -n "${capacity+x}" ] && printf " "
	capacity=$(/usr/bin/cat "$battery/capacity")
	[ "$capacity" -le 30 ] && warn="â—" && notify-send -u critical "Low battery!" "$capacity%"
	[ "$capacity" -gt 95 ] && notify-send "Battery level is at $lvl%."
	printf "ğŸ”‹%s%d%%" "$warn" "$capacity"; unset warn
done && exit 0
